<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/v/bs5/dt-2.1.8/datatables.min.js"></script>
<script>

    $(document).ready( function(){



        $('#borrowdate').text = new Date()

        $("table").DataTable({
            order : [0 , 'desc']
        })

        $("#book_table").on('click', ".book" , function(e){
            e.preventDefault();
            $("#bookid").val(this.parentNode.parentNode.cells[1].innerHTML)
            $("#bookname").val(this.parentNode.parentNode.cells[3].innerHTML)

        })

        $("#patron_table").on('click', ".patron", function(e){
            e.preventDefault()
            $("#patronid").val(this.parentNode.parentNode.cells[1].innerHTML)
            $("#patronname").val(this.parentNode.parentNode.cells[2].innerHTML + ", " + this.parentNode.parentNode.cells[3].innerHTML)
        })
    })
</script>
</body>
</html>