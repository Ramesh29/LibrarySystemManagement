<%- include('layout/header') %>

<div class="container-sm mt-2 pt-2">

    <a href="/addbook" class="btn btn-primary mt-5 mb-2"><i class="bi bi-plus-square-fill"></i> Add book</a>


    <% if ( books != '') { %>
      <table  class="table table-striped text-center mt-5">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">ISBN</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach((row, index) => {  %>
            <tr>
              <td scope="row"><%= index %></td>
              <td><img src="/<%=row.img %>" width="50" class="img-thumbnail" alt=""/></td>
              <td><%= row.title %></td>
              <td><%= row.author %></td>
              <td><%= row.isbn %></td>
              <td>
                  <a href="/editbook/<%= row._id %>" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>
              </td>
              <td>
                  <a href="/deletebook/<%= row._id %>" class="btn btn-danger"><i class="bi bi-pencil-square"></i> Delete</a>
              </td>             
            </tr>            
           <% }) %>
        </tbody>
      </table>    
    <% }  else { %>
        <h1 class="text-center text-seconday mt-5">No book found in the database </h1>

      <%  } %>
</div>


<%- include('layout/footer') %>
